<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <title>Users List</title>
</head>
<body class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Email</th>
                <th>FistName</th>
                <th>LastName</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(function (user) {%>
                <tr>
                    <td><%= user.email %></td>
                    <td><%= user.firstName %></td>
                    <td><%= user.lastName %></td>
                    <td><%= user.address %></td>
                    <td>
                        <button class="btn btn-success btn-sm" onclick="getDetailUser(<%= user.id %>)">Detail</button>
                        <button class="btn btn-primary btn-sm" type="button" onclick="getEditUser(<%= user.id %>)">Edit</button>
                        <button class="btn btn-danger btn-sm" type="button">Remove</button>
                    </td>
                </tr>
            <% }); %>
        </tbody>
        <button class="btn btn-info mb-4 mt-4 btn-sm" onclick="location.href = 'http://localhost:8080/users/add'">Add Users</button>
    </table>

    <script>
        function getDetailUser(id) {
            let currentPath = window.location.href;
            location.href = `${currentPath}/${id}`;
        }
        function getEditUser(id) {
            let currentHost = window.location.host;
            location.href = `http://${currentHost}/users/edit?id=${id}`;
        }
    </script>
</body>
</html>
