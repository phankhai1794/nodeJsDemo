<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" />
    <title>User Detail</title>
    <style>
        .container {
            width: 700px;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="jumbotron">
            <% if(user) { %>
                <h1>User Detail <%= user.email %></h1>
                <p><%= user.email %></p>
                <p><%= user.password %></p>
                <p><%= user.firstName %></p>
                <p><%= user.lastName %></p>
                <p><%= user.address %></p>
                <p><%= user.gender == 1 ? 'Male' : 'Female' %></p>
            <% } %>
            <button class="btn btn-primary" onclick="location.href = 'http://localhost:8080/users'">Back</button>
        </div>
    </div>
</body>
</html>
